<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="trip"
            type="com.example.trabalho.models.Trip" />

        <variable
            name="forecastDeparture"
            type="com.example.trabalho.models.Forecast" />

        <variable
            name="forecastArrival"
            type="com.example.trabalho.models.Forecast" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/labelForecastWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Previsão dos próximos dias"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelDetailsMaxArrival" />

        <TextView
            android:id="@+id/labelDetailsPressureHumidityWeatherArrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="28dp"
            android:text="@{`P / U: ` + forecastArrival.pressure + `hPa / ` + forecastArrival.humidity + `%`}"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/labelDetailsArrivalDate"
            app:layout_constraintTop_toBottomOf="@+id/labelWeatherArrival" />

        <TextView
            android:id="@+id/labelDetailsArrivalDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="28dp"
            android:text="@{`Data: ` + forecastArrival.formattedDate}"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelWeatherArrival" />

        <TextView
            android:id="@+id/labelDetailsPressureHumidityWeatherDeparture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="28dp"
            android:text="@{`P / U: ` + forecastDeparture.pressure + `hPa / ` + forecastDeparture.humidity + `%`}"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/labelDetailsDepartureDate"
            app:layout_constraintTop_toBottomOf="@+id/labelWeatherDeparture" />

        <TextView
            android:id="@+id/labelDetailsMaxWeatherDeparture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="12dp"
            android:text="@{`Máxima: ` + forecastDeparture.max + `°`}"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/labelDetailsMinWeatherDeparture"
            app:layout_constraintTop_toBottomOf="@+id/labelDetailsPressureHumidityWeatherDeparture" />

        <TextView
            android:id="@+id/labelDetailsMaxArrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="12dp"
            android:text="@{`Máxima: ` + forecastArrival.max + `°`}"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/labelDetailsMinWeatherArrival"
            app:layout_constraintTop_toBottomOf="@+id/labelDetailsPressureHumidityWeatherArrival" />

        <TextView
            android:id="@+id/labelDetailsMinWeatherDeparture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:text="@{`Mínima: ` + forecastDeparture.min + `°`}"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelDetailsDepartureDate" />

        <TextView
            android:id="@+id/labelDetailsMinWeatherArrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:text="@{`Mínima: ` + forecastArrival.min + `°`}"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelDetailsArrivalDate" />

        <TextView
            android:id="@+id/labelWeatherArrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Previsão de tempo na chegada"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelDetailsMaxWeatherDeparture" />

        <TextView
            android:id="@+id/labelWeatherDeparture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Previsão de tempo na partida"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelDetailsDestiny" />

        <TextView
            android:id="@+id/labelDetailsDepartureDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="28dp"
            android:text="@{`Data: ` + forecastDeparture.formattedDate}"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelWeatherDeparture" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewForecast"
            android:layout_width="327dp"
            android:layout_height="372dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelForecastWeather" />

        <TextView
            android:id="@+id/labelDetailsDestiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="28dp"
            android:text="@{`Destino: ` + trip.city + `, ` + trip.country}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>