<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="trip"
            type="com.example.trabalho.models.Trip" />

        <variable
            name="presenter"
            type="com.example.trabalho.presenter.TripDetailsPresenter" />

        <variable
            name="forecastHome"
            type="com.example.trabalho.models.Forecast" />

        <variable
            name="forecastDestine"
            type="com.example.trabalho.models.Forecast" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/placeATeste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@={trip.homePlace}"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewForecastA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewForecastA"
            android:layout_width="271dp"
            android:layout_height="211dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="132dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewForecastB"
            android:layout_width="271dp"
            android:layout_height="211dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placeBTeste" />

        <TextView
            android:id="@+id/placeBTeste"
            android:layout_width="59dp"
            android:layout_height="24dp"
            android:layout_marginStart="176dp"
            android:layout_marginLeft="176dp"
            android:layout_marginTop="36dp"
            android:text="@{trip.visitedPlace}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewForecastA" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>