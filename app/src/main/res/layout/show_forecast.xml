<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="forecastModel"
            type="com.example.trabalho.models.Forecast" />
        <variable
            name="forecastAdapter"
            type="com.example.trabalho.adapters.ForecastAdapter" />

    </data>

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardUser"
            android:layout_width="388dp"
            android:layout_height="234dp"
            android:tag="@{forecastModel}"
            app:contentPadding="5dp">

            <LinearLayout
                android:layout_width="388dp"
                android:layout_height="234dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labelForecastDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="28dp"
                    android:text="@{`Data: ` + forecastModel.formattedDate }"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/labelForecastPressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="12dp"
                    android:text="@{`Pressão: ` + forecastModel.pressure + `hPa` }"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/labelForecastDate" />

                <TextView
                    android:id="@+id/labelForecastHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="12dp"
                    android:text="@{`Umidade: ` + forecastModel.humidity + `%` }"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/labelForecastPressure" />

                <TextView
                    android:id="@+id/labelForecastMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="12dp"
                    android:text="@{`Mínima: ` + forecastModel.min + `°`}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/labelForecastHumidity" />

                <TextView
                    android:id="@+id/labelForecastDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="12dp"
                    android:text="@{`Descrição: ` + forecastModel.weather.description}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/labelForecastMax" />

                <TextView
                    android:id="@+id/labelForecastMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="12dp"
                    android:text="@{`Máxima: ` + forecastModel.max + `°`}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/labelForecastMin" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>